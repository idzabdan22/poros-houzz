<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Save.SaveFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/mysavetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Save" />

    <TextView
        android:layout_below="@id/mysavetext"
        android:layout_marginTop="15dp"
        android:id="@+id/buttondesign_save"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Design &amp; Decoration"
        />

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/buttonfurniture_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mysavetext"
        android:gravity="center"
        android:layout_toRightOf="@+id/buttondesign_save"
        android:text="Funiture"
        />

        </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameLayoutHome_save"
        android:layout_below="@+id/buttondesign_save"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>



</LinearLayout>